{
  // open custom_montys.omp.json
  // notepad $HOME\custom_montys.omp.json

  // Import custom CSS
  "vscode_custom_css.imports": [
    "file:///C:/Users/dongu/AppData/Roaming/Code/User/custom-vscode.css"
    // "file:///C:/Users/dongu/AppData/Roaming/Code/User/vscode-script.js"
  ],

  // Disable minimap in the editor
  "editor.minimap.enabled": false,

  // Emmet settings for JavaScript React
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Editor tab and space settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  // Disable scroll sync in Markdown Preview Enhanced
  "markdown-preview-enhanced.scrollSync": false,

  // Set default terminal profile and environment on Windows
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.env.windows": {
    "LANG": "en_US.UTF-8"
  },

  // Configure terminal profiles for Windows
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": ["/K", "chcp 65001"],
      "icon": "terminal-cmd",
      "name": "Command Prompt",
      "suppressApplicationTitle": true,
      "env": {
        "LANG": "en_US.UTF-8"
      }
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },

  // Set theme for Markdown Preview Enhanced
  "markdown-preview-enhanced.previewTheme": "one-dark.css",

  // Disable notifications from Live Server
  "liveServer.settings.donotShowInfoMsg": true,

  // Enable auto-fetch for Git
  "git.autofetch": true,

  // Default formatters for different languages
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Enable word wrap in the editor
  "editor.wordWrap": "on",

  // Font settings for editor and terminal
  "editor.fontSize": 13.4,
  "terminal.integrated.fontSize": 13,
  // "terminal.integrated.fontFamily": "Consolas",
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.lineHeight": 0.7,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "MesloLGM Nerd Font Mono",
  "terminal.integrated.shellArgs.windows": "-nologo",

  // Enable Red Hat telemetry
  "redhat.telemetry.enabled": true,

  // Set Reveal.js theme for Markdown Preview Enhanced
  "markdown-preview-enhanced.revealjsTheme": "black.css",

  // Custom title bar visibility
  "window.customTitleBarVisibility": "windowed",

  // Editor color customizations
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#cafe96"
  },

  // Enable smooth caret animation
  "editor.cursorSmoothCaretAnimation": "on",

  // Java environment settings
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.dependency.packagePresentation": "hierarchical",
  "java.project.sourcePaths": ["src"],
  "java.project.outputPath": "bin",
  "java.project.referencedLibraries": ["lib/**/*.jar"],
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },

  // Python environment settings
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],

  // Enable format on save globally
  "editor.formatOnSave": true,

  // Custom font family for the editor
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",

  // Indent-Rainbow color configuration
  "indentRainbow.colors": [
    "rgba(216, 243, 220, 0.08)",
    "rgba(183, 228, 199, 0.08)",
    "rgba(149, 213, 178, 0.08)",
    "rgba(116, 198, 157, 0.08)",
    "rgba(82, 183, 136, 0.08)",
    "rgba(64, 145, 108, 0.08)",
    "rgba(45, 106, 79, 0.08)",
    "rgba(27, 67, 50, 0.08)",
    "rgba(8, 28, 21, 0.08)",
    "rgba(21, 8, 28, 0.08)",
    "rgba(50, 27, 67, 0.08)",
    "rgba(79, 45, 106, 0.08)",
    "rgba(108, 64, 145, 0.08)",
    "rgba(136, 82, 183, 0.08)",
    "rgba(157, 116, 198, 0.08)",
    "rgba(178, 149, 213, 0.08)",
    "rgba(199, 183, 228, 0.08)",
    "rgba(220, 216, 243, 0.08)",
    "rgba(243, 220, 216, 0.08)",
    "rgba(228, 199, 183, 0.08)"
  ],

  // Jupyter and Git settings
  "jupyter.askForKernelRestart": false,
  "git.confirmSync": false,

  // Draw.io settings
  "hediet.vscode-drawio.theme": "min",
  "hediet.vscode-drawio.codeLinkActivated": false,

  // Disable background extension auto-install
  "background.autoInstall": false,

  // Disable compact folder display in explorer
  "explorer.compactFolders": false,

  // GitHub Copilot settings
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "javascript": true
  },

  // GitLens settings
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "pullRequests",
    "remoteBranches",
    "tags"
  ],
  "gitlens.graph.scrollMarkers.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags",
    "pullRequests"
  ],
  "gitlens.graph.minimap.enabled": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.view.alwaysShowHeaderActions": false,

  // Disable Command Center and layout control
  "window.commandCenter": true,
  "workbench.layoutControl.enabled": true,
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  "workbench.activityBar.location": "hidden",
  "background.windowBackgrounds": [
    "c:/Users/dongu/OneDrive/Tài liệu/Images/wp9355922.png"
  ],
  "workbench.colorTheme": "Andromeda",
  "workbench.statusBar.visible": false

  // Save installed extensions
  // Run this command in the terminal:
  // code --list-extensions > extensions.txt
  // To reinstall extensions, use the following command:
  // cat extensions.txt | xargs -n 1 code --install-extension
}
