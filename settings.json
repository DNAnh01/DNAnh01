{
  "markdown-preview-enhanced.scrollSync": false,
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.env.windows": {
    "LANG": "en_US.UTF-8"
  },

  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": ["/K", "chcp 65001"],
      "icon": "terminal-cmd",
      "name": "Command Prompt",
      "suppressApplicationTitle": true,
      "env": {
        "LANG": "en_US.UTF-8"
      }
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },

  "markdown-preview-enhanced.previewTheme": "one-dark.css",
  "liveServer.settings.donotShowInfoMsg": true,
  "git.autofetch": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.editor.wrapTabs": true,
  "workbench.editorAssociations": {
    "*.sqlite3": "default",
    "*.mwb": "default"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "liveServer.settings.donotVerifyTags": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.wordWrap": "on",
  "redhat.telemetry.enabled": true,
  "background.windowBackgrounds": [
    "https://raw.githubusercontent.com/DNAnh01/assets/main/personal/black-currency-money-wallpapers.jpg"
  ],
  "background.backgroundOpacity": [0.95, 0.95, 0.95, 0.95],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.openRepositoryInParentFolders": "never",
  "extensions.ignoreRecommendations": true,
  "workbench.colorTheme": "Bearded Theme Monokai Black",
  "files.autoSave": "afterDelay",
  "markdown-preview-enhanced.revealjsTheme": "black.css",
  "window.customTitleBarVisibility": "windowed",
  "terminal.integrated.fontFamily": "Consolas",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "background.backgroundChangeTime": [0.7, 0.7, 0.7, 0.7],
  // customize the editor settings
  "editor.cursorSmoothCaretAnimation": "on",

  // customize the java environment settings
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.dependency.packagePresentation": "hierarchical",
  "java.project.sourcePaths": ["src"],
  "java.project.outputPath": "bin",
  "java.project.referencedLibraries": ["lib/**/*.jar"],
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  // customize the python environment settings
  "[python]": {
    "editor.formatOnType": true
  },
  // customize the theme and extension settings

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.lineHeight": 0.7,
  "terminal.integrated.cursorStyle": "line",
  "markdown-preview-enhanced.previewColorScheme": "selectedPreviewTheme",
  "workbench.view.alwaysShowHeaderActions": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "variable",
        "settings": {
          "foreground": "#37ca9b"
        }
      },
      {
        "scope": "variable.parameter",
        "settings": {
          "foreground": "#388b50"
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#15a2ee",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#cafe96"
        }
      },
      {
        "scope": "keyword",
        "settings": {
          "foreground": "#2cab05"
        }
      },
      {
        "scope": "string",
        "settings": {
          "foreground": "#a1b481"
        }
      },
      {
        "scope": "comment",
        "settings": {
          "foreground": "#888888"
        }
      }
    ]
  },

  // customize the extension settings
  "powermode.enabled": true,
  "powermode.combo.counterEnabled": "hide",
  "powermode.combo.counterSize": 30,
  "powermode.combo.threshold": 0.1,
  "powermode.shake.enabled": false,
  "powermode.combo.location": "off",
  "powermode.explosions.maxExplosions": 20,
  // emmet settings
  "emmet.extensionsPath": ["./emmet"],
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  // indent-rainbow settings
  // https://coolors.co/palettes/trending
  "indentRainbow.colors": [
    "rgba(216, 243, 220, 0.08)",
    "rgba(183, 228, 199, 0.08)",
    "rgba(149, 213, 178, 0.08)",
    "rgba(116, 198, 157, 0.08)",
    "rgba(82, 183, 136, 0.08)",
    "rgba(64, 145, 108, 0.08)",
    "rgba(45, 106, 79, 0.08)",
    "rgba(27, 67, 50, 0.08)",
    "rgba(8, 28, 21, 0.08)"
  ],
  "jupyter.askForKernelRestart": false,
  "git.confirmSync": false,
  "hediet.vscode-drawio.resizeImages": null,
  // customize the drawio theme
  "hediet.vscode-drawio.theme": "dark",
  "hediet.vscode-drawio.codeLinkActivated": false,
  "background.autoInstall": false,
  "workbench.activityBar.location": "hidden"

  // save the installed extensions
  // code --list-extensions > extensions.txt
  // install extensions in vscode
  // cat extensions.txt | xargs -n 1 code --install-extension
}
