{
  "markdown-preview-enhanced.scrollSync": false,
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.env.windows": {
    "LANG": "en_US.UTF-8"
  },

  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": ["/K", "chcp 65001"],
      "icon": "terminal-cmd",
      "name": "Command Prompt",
      "suppressApplicationTitle": true,
      "env": {
        "LANG": "en_US.UTF-8"
      }
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },

  "markdown-preview-enhanced.previewTheme": "one-dark.css",
  "liveServer.settings.donotShowInfoMsg": true,
  "git.autofetch": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.editor.wrapTabs": true,
  "workbench.editorAssociations": {
    "*.sqlite3": "default",
    "*.mwb": "default"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "liveServer.settings.donotVerifyTags": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.wordWrap": "on",
  "redhat.telemetry.enabled": true,
  "background.windowBackgrounds": [],
  "background.backgroundOpacity": [0.8, 0.8, 0.8, 0.8],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.openRepositoryInParentFolders": "never",
  "extensions.ignoreRecommendations": true,
  "workbench.colorTheme": "One Dark Pro Darker",
  "files.autoSave": "afterDelay",
  "markdown-preview-enhanced.revealjsTheme": "black.css",
  "window.customTitleBarVisibility": "windowed",
  "terminal.integrated.fontFamily": "Consolas",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "background.backgroundChangeTime": [0, 0, 0, 0],

  // customize the java environment settings
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.dependency.packagePresentation": "hierarchical",
  "java.project.sourcePaths": ["src"],
  "java.project.outputPath": "bin",
  "java.project.referencedLibraries": ["lib/**/*.jar"],
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  // customize the python environment settings
  "[python]": {
    "editor.formatOnType": true
  },
  // customize the theme and extension settings

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.lineHeight": 0.7,
  "terminal.integrated.cursorStyle": "line",
  "markdown-preview-enhanced.previewColorScheme": "selectedPreviewTheme",
  "workbench.view.alwaysShowHeaderActions": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "variable",
        "settings": {
          "foreground": "#37ca9b"
        }
      },
      {
        "scope": "variable.parameter",
        "settings": {
          "foreground": "#388b50"
        }
      },
      {
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#15a2ee",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#cafe96"
        }
      },
      {
        "scope": "keyword",
        "settings": {
          "foreground": "#ffd364"
        }
      },
      {
        "scope": "string",
        "settings": {
          "foreground": "#a1b481"
        }
      },
      {
        "scope": "comment",
        "settings": {
          "foreground": "#888888"
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "tab.activeBackground": "#011609",
    "breadcrumb.background": "#011609",
    "panel.background": "#011609",
    "editor.background": "#011609",
    "editor.selectionBackground": "#454545",
    "editor.lineHighlightBackground": "#011609",
    "sideBar.background": "#011609",
    "minimap.background": "#011609",
    "editor.foreground": "#dae9db",
    "editorLineNumber.activeForeground": "#d2dcd3",
    "editorGutter.background": "#011609",
    "titleBar.activeBackground": "#031e0d",
    "activityBar.background": "#011609",
    "activityBar.foreground": "#ffffff",
    "activityBar.activeBorder": "#011609",
    "activityBar.inactiveForeground": "#6c6c6c",
    "editorGroupHeader.tabsBackground": "#011609",
    "editorGroupHeader.tabsBorder": "#011609",
    "editorGroupHeader.tab.activeBackground": "#011609",
    "editorGroupHeader.tab.activeForeground": "#ffffff",
    "editorGroupHeader.tab.inactiveForeground": "#6c6c6c",
    "statusBar.background": "#011609",
    "statusBar.noFolderBackground": "#011609",
    "statusBar.debuggingBackground": "#011609",
    "statusBarItem.prominentForeground": "#ffffff",
    "statusBarItem.remoteBackground": "#011609",
    "statusBarItem.remoteForeground": "#ffffff",
    "statusBarItem.remoteBackgroundHover": "#454545",
    "debugToolBar.background": "#454545",
    // customize the terminal settings
    "terminal.foreground": "#2deb39",
    "terminal.background": "#011609",
    "terminalCursor.background": "#2deb39",
    "terminalCursor.foreground": "#2deb39",
    "terminal.ansiBlack": "#ffffff",
    "terminal.ansiBlue": "#0000ff",
    "terminal.ansiBrightBlack": "#ffffff",
    "terminal.ansiBrightBlue": "#0000ff",
    "terminal.ansiBrightCyan": "#00ffff",
    "terminal.ansiBrightGreen": "#00ff00",
    "terminal.ansiBrightMagenta": "#ff00ff",
    "terminal.ansiBrightRed": "#ff0000",
    "terminal.ansiBrightWhite": "#ffffff",
    "terminal.ansiBrightYellow": "#ffff00",
    "terminal.ansiCyan": "#00ffff",
    "terminal.ansiGreen": "#00ff00",
    "terminal.ansiMagenta": "#ff00ff",
    "terminal.ansiRed": "#ff0000",
    "terminal.ansiWhite": "#ffffff"
  },

  // customize the extension settings
  "powermode.enabled": true,
  "powermode.combo.counterEnabled": "hide",
  "powermode.combo.counterSize": 30,
  "powermode.combo.threshold": 0.1,
  "powermode.shake.enabled": false,
  "powermode.combo.location": "off",
  "powermode.explosions.maxExplosions": 10,
  // emmet settings
  "emmet.extensionsPath": ["./emmet"],
  "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
  // indent-rainbow settings
  "indentRainbow.colors": [
    "rgba(234, 105, 139, 0.15)",
    "rgba(213, 93, 146, 0.15)",
    "rgba(192, 82, 153, 0.15)",
    "rgba(172, 70, 161, 0.15)",
    "rgba(151, 58, 168, 0.15)",
    "rgba(130, 47, 175, 0.15)",
    "rgba(109, 35, 182, 0.15)",
    "rgba(100, 17, 173, 0.15)",
    "rgba(87, 16, 137, 0.15)",
    "rgba(71, 18, 107, 0.15)"
  ],
  "jupyter.askForKernelRestart": false,
  "git.confirmSync": false,
  "hediet.vscode-drawio.resizeImages": null,
  "workbench.activityBar.location": "hidden",
  // customize the drawio theme
  "hediet.vscode-drawio.theme": "dark",
  "hediet.vscode-drawio.codeLinkActivated": false
}
